<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/journeyInfoLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".JourneyInformationActivity"
    android:weightSum="1">

    <TextView
        android:text="Hatfield to London Euston"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/journeyStationsTv"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="18sp"
        android:paddingStart="12dp"
        android:paddingEnd="0dp"
        android:paddingTop="12dp" />

    <TextView
        android:text="0 hour 00 minutes, 0 changes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/journeyDetailsTv"
        android:layout_marginTop="5dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_below="@+id/journeyStationsTv"
        android:layout_alignParentStart="true" />

    <View
        android:layout_width="match_parent"
        android:background="@android:color/darker_gray"
        android:layout_alignParentStart="true"
        android:id="@+id/delimiter"
        android:layout_height="2dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/journeyDetailsTv" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/journeyLegsRv"
        android:layout_below="@+id/delimiter"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_height="match_parent" />



</RelativeLayout>

