<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hardwareAccelerated="false"
    android:orientation="vertical"
    android:paddingBottom="4dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp"
    android:weightSum="1">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listItemLayout"
        android:layout_margin="10dp">

        <TextView
            android:text="00:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/departureTimeTv"
            android:textColor="@color/colorBlack"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingStart="0dp"
            android:paddingEnd="16dp"
            android:layout_alignParentTop="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/times_arrow"
            android:paddingLeft="15dp"
            android:paddingRight="20dp"
            android:paddingBottom="3dp"
            android:src="@drawable/ic_arrow_24dp"
            android:scaleType="centerCrop"
            android:cropToPadding="false"
            android:clickable="false"
            android:adjustViewBounds="false"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/departureTimeTv"
            android:layout_alignBottom="@+id/departureTimeTv" />

        <TextView
            android:text="00:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/arrivalTimeTv"
            android:textColor="@color/colorBlack"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingStart="0dp"
            android:paddingEnd="16dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/times_arrow" />

        <TextView
            android:text="XXX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/departureStationTv"
            android:textColor="@color/colorLightGray"
            android:layout_below="@+id/departureTimeTv"
            android:layout_alignParentStart="true"
            android:textStyle="normal|bold" />

        <TextView
            android:text="Platform 0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/departurePlatformTv"
            android:textColor="@color/colorLightGray"
            android:layout_below="@+id/departureStationTv"
            android:layout_alignParentStart="true"
            android:textAllCaps="false" />

        <TextView
            android:text="XXX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/arrivalStationTv"
            android:textColor="@color/colorLightGray"
            android:layout_below="@+id/times_arrow"
            android:layout_toEndOf="@+id/times_arrow"
            android:textStyle="normal|bold" />

        <TextView
            android:text="Platform 0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/arrivalPlatformTv"
            android:textColor="@color/colorLightGray"
            android:layout_above="@+id/routeTv"
            android:layout_alignStart="@+id/arrivalStationTv" />

        <TextView
            android:text="London Euston to Hatfield Station"
            android:id="@+id/routeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/departurePlatformTv"
            android:paddingTop="8dp"
            android:textColor="@color/colorLightGray" />




        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close_48px"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/deleteBtn"
            android:clickable="true"/>

        <TextView
            android:text="0hr 00m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/durationTv"
            android:textColor="@color/colorLightGray"
            android:layout_above="@+id/numberOfChangesTv"
            android:layout_alignParentEnd="true" />

        <TextView
            android:text="0 change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/numberOfChangesTv"
            android:textColor="@color/colorLightGray"
            android:layout_alignParentEnd="true"
            android:layout_above="@+id/remindAtTv"/>

        <TextView
            android:text="Remind me at 00:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/remindAtTv"
            android:textSize="13sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_alignParentEnd="true"
            android:gravity="left"
            android:layout_alignBaseline="@+id/routeTv"
            android:layout_alignBottom="@+id/routeTv"/>


    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_marginTop="8dp"
        android:layout_weight="0.00"
        android:background="@android:color/darker_gray"
        android:layout_height="1.5dp" />
</LinearLayout>