<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp">

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listItemLayout"
            android:layout_margin="10dp">

            <TextView
                android:text="00:00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/departureTimeTv"
                android:textColor="@color/colorBlack"
                android:textSize="24sp"
                android:textStyle="bold"
                android:paddingStart="0dp"
                android:paddingEnd="16dp"
                android:layout_alignParentTop="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/times_arrow"
                android:paddingLeft="15dp"
                android:paddingRight="20dp"
                android:paddingBottom="3dp"
                android:src="@drawable/ic_arrow_24dp"
                android:scaleType="centerCrop"
                android:cropToPadding="false"
                android:clickable="false"
                android:adjustViewBounds="false"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/departureTimeTv"
                android:layout_alignBottom="@+id/departureTimeTv" />

            <TextView
                android:text="00:00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/arrivalTimeTv"
                android:textColor="@color/colorBlack"
                android:textSize="24sp"
                android:textStyle="bold"
                android:paddingStart="0dp"
                android:paddingEnd="16dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/times_arrow" />

            <TextView
                android:text="XXX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/departureStationTv"
                android:textColor="@color/colorLightGray"
                android:layout_below="@+id/departureTimeTv"
                android:layout_alignParentStart="true"
                android:textStyle="normal|bold" />

            <TextView
                android:text="Plat. 0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/departurePlatformTv"
                android:textColor="@color/colorLightGray"
                android:layout_below="@+id/departureStationTv"
                android:layout_alignParentStart="true"
                android:textAllCaps="false" />

            <TextView
                android:text="XXX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/arrivalStationTv"
                android:textColor="@color/colorLightGray"
                android:layout_below="@+id/times_arrow"
                android:layout_toEndOf="@+id/times_arrow"
                android:textStyle="normal|bold" />

            <TextView
                android:text="Plat. 0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/arrivalPlatformTv"
                android:textColor="@color/colorLightGray"
                android:layout_below="@+id/arrivalStationTv"
                android:layout_alignStart="@+id/arrivalStationTv" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_close_48px"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/deleteBtn"
                android:clickable="true"/>

            <TextView
                android:paddingTop="8dp"
                android:text="Bracknell to Reading Station"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/routeTv"
                android:textColor="@color/colorLightGray"
                android:layout_below="@+id/departurePlatformTv"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:text="0hr 00m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/durationTv"
                android:textColor="@color/colorLightGray"
                android:layout_above="@+id/numberOfChangesTv"
                android:layout_alignParentEnd="true" />

            <TextView
                android:text="0 change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/numberOfChangesTv"
                android:textColor="@color/colorLightGray"
                android:layout_alignBaseline="@+id/routeTv"
                android:layout_alignBottom="@+id/routeTv"
                android:layout_alignParentEnd="true"
                />

            <TextView
                android:text="Remind me at 00:00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/remindAtTv"
                android:paddingBottom="15dp"
                android:textStyle="bold"
                android:textColor="@color/red"
                android:layout_above="@+id/durationTv"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>