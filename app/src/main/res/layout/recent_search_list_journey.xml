<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorWhite">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="8dp"
        android:padding="8dp"
        app:cardBackgroundColor="#C0C0C0">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <TextView
                android:id="@+id/departureStationTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="10dp"
                android:text="XXX"
                android:textColor="@color/colorDarkGray"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/arrivalStationTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/arrow"
                android:text="XXX"
                android:textColor="@color/colorDarkGray"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/routeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/departureStationTv"
                android:layout_marginTop="8dp"
                android:text="London Euston to Hatfield Statin"
                android:textColor="@color/colorDarkGray" />

            <ImageView
                android:id="@+id/arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/routeTv"
                android:layout_toEndOf="@+id/departureStationTv"
                android:adjustViewBounds="false"
                android:cropToPadding="false"
                android:paddingTop="5dp"
                android:paddingStart="10dp"
                android:paddingEnd="18dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_arrow_24dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>